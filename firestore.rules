// Firestore Security Rules
// Production-safe rules with proper authentication and authorization

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Replace with your actual admin email address
      return isSignedIn() && 
             request.auth.token.email in [
               'kaviyamobiles81@gmail.com'  // Admin email
             ];
    }
    
    // Photos Collection Rules (formerly gallery)
    match /photos/{photoId} {
      // Anyone can read photos (public gallery)
      allow read: if true;
      
      // Only admins can create, update, or delete photos
      allow create, update, delete: if isAdmin();
    }
    
    // Comments Collection Rules (NEW - for reviews and ratings)
    match /comments/{commentId} {
      // Anyone can read comments (public reviews)
      allow read: if true;
      
      // Anyone can create comments (public can add reviews)
      allow create: if true;
      
      // Only admins can update or delete comments (moderation)
      allow update, delete: if isAdmin();
    }
    
    // Bookings Collection Rules
    match /bookings/{bookingId} {
      // Anyone can create bookings (public form submission)
      allow create: if true;
      
      // Only admins can read bookings
      allow read: if isAdmin();
      
      // Only admins can update or delete bookings
      allow update, delete: if isAdmin();
    }
    
    // Optional: Admin Users Collection
    // Uncomment if you want to manage admins dynamically
    /*
    match /admins/{userId} {
      allow read: if isSignedIn();
      allow write: if false; // Manage through Firebase Console
    }
    */
  }
}
