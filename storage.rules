// Firebase Storage Security Rules
// Production-safe rules for image uploads

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Admin = any authenticated Firebase user
    // Create your admin account in Firebase Console → Authentication → Users
    function isAdmin() {
      return isSignedIn();
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    function isImageOrVideo() {
      return isImage() || isVideo();
    }
    
    function isSizeValid() {
      // Max file size: 50MB (increased for video support)
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // Gallery folder rules (used by admin dashboard)
    match /gallery/{filename} {
      // Anyone can read gallery images/videos (for public display)
      allow read: if true;
      
      // Only admins can upload images or videos
      // Must be an image/video and under 50MB
      allow write: if isAdmin() && isImageOrVideo() && isSizeValid();
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // Photos folder rules
    match /photos/{filename} {
      // Anyone can read photos/videos (for public display)
      allow read: if true;
      
      // Only admins can upload
      // Must be an image/video and under 50MB
      allow write: if isAdmin() && isImageOrVideo() && isSizeValid();
      
      // Only admins can delete photos
      allow delete: if isAdmin();
    }
    
    // Thumbnails folder (if you implement image optimization)
    match /thumbnails/{filename} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Temp uploads (if needed for processing)
    match /temp/{userId}/{filename} {
      allow read, write: if isAdmin() && request.auth.uid == userId;
    }
  }
}
